<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/scroll">
            <ImageView
                android:id="@+id/rounded"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/rounded" />

            <TextView
                android:id="@+id/im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rounded"
                android:layout_alignStart="@+id/rounded"
                android:layout_alignEnd="@+id/rounded"
                android:fontFamily="sans-serif-black"
                android:text="I'M RIZKI DARMAWAN"
                android:textAlignment="center"
                android:textSize="50px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im"
                android:layout_alignStart="@+id/rounded"
                android:layout_alignEnd="@+id/rounded"
                android:layout_marginTop="15dp"
                android:text="@string/hello"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/titleEducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:text="⚫ EDUCATION"
                android:textSize="30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/year"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleEducation"
                android:layout_alignStart="@+id/titleEducation"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:text="2020 - Now"
                android:textSize="20px"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/educationOne"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignEnd="@+id/textView"

                android:layout_marginTop="45dp"
                android:layout_toEndOf="@+id/titleEducation"
                android:text="Universitas Dian Nuswantoro Semarang"
                android:textSize="20px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/educationOne"
                android:layout_alignEnd="@+id/educationOne"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/titleEducation"
                android:text="Technical Information GPA 3.60"
                android:textSize="18px" />

            <TextView
                android:id="@+id/year2"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/year"
                android:layout_alignStart="@+id/year"
                android:layout_marginTop="35dp"
                android:fontFamily="sans-serif-black"
                android:text="2017 - 2020"
                android:textSize="20px"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/educationTwo"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descOne"
                android:layout_alignStart="@+id/descOne"
                android:layout_alignEnd="@+id/descOne"
                android:layout_marginTop="20dp"
                android:text="SMK Askhabul Kahfi Semarang"
                android:textSize="20px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desctwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/educationTwo"
                android:layout_alignStart="@+id/educationTwo"
                android:layout_alignEnd="@+id/educationTwo"
                android:layout_marginTop="5dp"
                android:text="Technical Computer and Network "
                android:textSize="18px" />

            <TextView
                android:id="@+id/titleSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desctwo"
                android:layout_alignStart="@+id/textView"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:text="⚫ MY SKILL"
                android:textSize="30px"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/skill"
                android:layout_width="wrap_content"
                android:layout_height="335dp"
                android:layout_below="@+id/desctwo"
                android:layout_alignStart="@+id/titleSkill"
                android:layout_alignEnd="@+id/desctwo"
                android:layout_alignParentBottom="@+id/scroll"
                android:layout_marginStart="-3dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/skill"
                tools:ignore="NotSibling" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>